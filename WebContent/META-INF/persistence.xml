<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
             
	<!-- transaction type will be JTA for programs running on a Java EE server -->
	<persistence-unit name="jpa-example" transaction-type="JTA">
		<jta-data-source>exampeDatabase</jta-data-source>
    	<non-jta-data-source>exampleDatabaseUnmanaged</non-jta-data-source>
		<!-- name of persistence provider's implementation class. This is the class for EclipseLink -->
		<!-- <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> -->
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- Can be none, create, drop or drop-and-create -->
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<!-- jdbc jndi -->
			<property name="javax.persistence.jdbc.url" value="jdbc:__default"/>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
			<property name="eclipselink.logging.level" value="INFO"/>
		</properties>
	</persistence-unit>
</persistence>